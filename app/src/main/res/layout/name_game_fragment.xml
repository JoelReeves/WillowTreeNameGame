<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/face_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Space
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="@dimen/name_space_bottom_margin"/>

    <com.willowtreeapps.namegame.ui.PersonView
        android:id="@+id/iv_first"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/cdFace"/>

    <com.willowtreeapps.namegame.ui.PersonView
        android:id="@+id/iv_second"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/cdFace"/>

    <com.willowtreeapps.namegame.ui.PersonView
        android:id="@+id/iv_third"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/cdFace"/>

    <com.willowtreeapps.namegame.ui.PersonView
        android:id="@+id/iv_fourth"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/cdFace"/>

    <com.willowtreeapps.namegame.ui.PersonView
        android:id="@+id/iv_fifth"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/cdFace"/>

</LinearLayout>